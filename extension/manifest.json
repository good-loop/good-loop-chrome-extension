{
	"manifest_version": 2,
 
	"name": "Good-Loop Browser Extension",
	"description": "We're working on this... Blocks Facebook adverts.",
	"version": "0.1.0",
	
	"icons": {
		"64": "logo.png"
	},
 
	"browser_action": {
	  "default_icon": "logo.png",
	  "default_popup": "popup.html",
	  "default_title": "Hello World"
	},

	"content_scripts": [
		{
			"matches": ["https://*.facebook.com/*"],
			// "exclude_matches": ["https://*.rbs.com", "https://*bank*", "https://*santander*"],
			"js": ["jquery.js", "inpage.js"]
		}
	],

	"optional_permissions": [
	  "activeTab",
	  "storage",
	  "browsingData"
	],

	"options_page": "options.html"
 }