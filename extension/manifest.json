{
	"manifest_version": 2,
 
	"name": "Good-Loop Browser Extension",
	"description": "We're working on this... TODO: banner ads in a top section + collect data with permission",
	"version": "0.1.2",
	
	"icons": {
		"64": "img/logo.64.png"
	},
 
	"browser_action": {
	  "default_icon": "img/logo.svg",
	  "default_popup": "popup.html",
	  "default_title": "Hello World"
	},

	"content_scripts": [		
		{			
			"matches": ["<all_urls>"],
			"exclude_matches": ["*://as.good-loop.com/*","*://my.good-loop.com/*","*://good-loop.com/*"],
			"js": ["build/js/bundle-debug.js"]
		}
	],

	"chrome_url_overrides" : {
		"newtab": "newtab.html"
	},

	"optional_permissions": [
	  "activeTab",
	  "storage",
	  "browsingData"
	],

	"options_ui": {
		"page": "options.html",
		"open_in_tab": false
	}
 }