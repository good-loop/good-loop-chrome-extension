{
	"manifest_version": 2,
 
	"name": "Good-Loop: Tabs for Good",
	"description": "We're working on this... Raise money for charity by placing banner ads in newtab + collect data with permission",
	"version": "0.1.7",

	"icons": {
		"64": "img/gl-logo/LogoMark/logo.64.png"
	},
 
	"web_accessible_resources": ["inject.js"],

	"chrome_url_overrides" : {
		"newtab": "newtab.html"
	},

	"optional_permissions": [
	  "storage"
	],

	"options_ui": {
		"page": "options.html",
		"open_in_tab": false
	},

	"content_scripts": [		
		{			
			"matches": ["<all_urls>"],
			"exclude_matches": ["*://as.good-loop.com/*","*://my.good-loop.com/*","*://good-loop.com/*"],
			"js": ["build/js/bundle-debug.js"]
		}
	],

	"content_security_policy": "img-src * data: blob: 'unsafe-inline'; script-src 'self'; object-src 'self'"
 }